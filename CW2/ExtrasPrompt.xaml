<Window x:Class="CW2.ExtrasPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW2"
        mc:Ignorable="d"
        Title="ExtrasPrompt" Height="253.782" Width="300">
    <Grid>
        <Label x:Name="lblPromptBooking" Content="Do you have a booking?" HorizontalAlignment="Left" Height="32" Margin="73,22,0,0" VerticalAlignment="Top" Width="141"/>
        <Button x:Name="btnBookYes" Content="Yes" HorizontalAlignment="Left" Height="30" Margin="60,59,0,0" VerticalAlignment="Top" Width="70" Click="btnBookYes_Click"/>
        <Button x:Name="btnBookNo" Content="No" HorizontalAlignment="Left" Height="30" Margin="157,59,0,0" VerticalAlignment="Top" Width="70" Click="btnBookNo_Click"/>
        <Label x:Name="lblEnterRef" Content="Please Enter Booking Reference:" HorizontalAlignment="Left" Height="31" Margin="53,109,0,0" VerticalAlignment="Top" Width="184"/>
        <TextBox x:Name="txtReturnRef" HorizontalAlignment="Left" Height="24" Margin="53,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Height="30" Margin="113,183,0,0" VerticalAlignment="Top" Width="70" Click="btnSubmit_Click"/>

    </Grid>
</Window>
